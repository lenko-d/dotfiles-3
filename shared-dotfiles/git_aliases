function join { local IFS="$1"; shift; echo "$*"; }

alias la="ls -a"
alias ll="ls -l"
alias lla="ls -la"

# Git stuff
alias g="git"
alias gs="git status"
alias gd="git diff"
alias gdc="git diff --cached"
alias ga="git add"
alias gaa="git add --all"
alias gps="git push"
alias gpl="git pull"
alias gr="git rebase"
alias gl="git log"
alias gh="git hist"

function gc {
  git commit -m "$(join ' ' $@)"
}
